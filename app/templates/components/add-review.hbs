{{#if addNewReview}}
  <div class="new-review">
    <h2>New Review</h2>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{#power-select
          selected=rating
          options=ratings
          onchange=(action (mut rating))
          as |item|
        }}
        {{item}}
        {{/power-select}}
      </div>
      <div class="form-group">
        <label for="comment">Comments</label>
        {{textarea value=comment id="comment" cols="60" rows="5"}}
      </div>
      <button class="btn" {{action 'saveReview'}}>Submit Review</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'addNewReview'}}>Add a Review</button>
{{/if}}
